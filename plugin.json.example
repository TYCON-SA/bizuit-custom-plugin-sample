{
  // =============================================================================
  // Plugin Manifest Configuration
  // =============================================================================
  // This file defines plugin metadata and default configuration.
  // All fields are required unless marked optional.

  // Plugin identification (required)
  "name": "myplugin",
  "version": "1.0.0",
  "description": "My custom backend plugin",
  "author": "Your Name",

  // Entry point (required)
  "entryPoint": "MyPlugin.dll",
  "pluginClass": "MyPlugin.MyPluginPlugin",

  // Database requirement (optional, defaults to true)
  // Set to false if your plugin doesn't need database access
  "requiresDatabase": true,

  // =============================================================================
  // Default Settings (Optional) - FOR CI/CD DEPLOYMENT
  // =============================================================================
  // This file is used by CI/CD pipelines to create the deployment ZIP.
  // Values should be EMPTY or safe defaults only.
  //
  // For local development, use plugin.local.json.example instead.
  //
  // CI/CD Pipeline Flow:
  // 1. Copy plugin.json.example â†’ plugin.json
  // 2. Run: node scripts/sanitize-plugin-json.mjs (empties all values)
  // 3. Run: npm run package (creates ZIP with sanitized plugin.json)
  //
  // Backend Host will auto-create these settings with empty values.
  // Admin then configures real values via Admin UI.

  "defaultSettings": {
    // External service URLs (empty - admin must configure)
    "ExternalApiUrl": "",
    "WebhookUrl": "",
    "AzureStorageUrl": "",

    // Credentials (empty - admin must configure as encrypted)
    "ApiKey": "",
    "AzureStorageKey": "",

    // Safe defaults (can have values)
    "MaxItemsPerPage": "50",
    "MaxRetries": "3",
    "TimeoutSeconds": "30",
    "CacheTimeoutSeconds": "300",

    // Feature flags (safe defaults)
    "EnableDebugLogs": "false",
    "EnableCaching": "true",
    "EnableNotifications": "false",

    // Business rules (safe defaults)
    "DefaultCurrency": "USD",
    "DefaultLanguage": "en"
  }

  // =============================================================================
  // Version Metadata (Auto-populated by Build Scripts)
  // =============================================================================
  // These fields are automatically added by npm run package script.
  // DO NOT add manually - they will be overwritten.
  //
  // "commitHash": "abc123...",        // Git commit SHA
  // "releaseNotes": "feat: ...",      // Git commit message
  // "repositoryUrl": "https://...",   // Git remote URL
  // "buildDate": "2025-12-28T...",    // ISO 8601 timestamp
  // "buildUrl": "https://..."         // CI/CD build URL (added by pipeline)
}
